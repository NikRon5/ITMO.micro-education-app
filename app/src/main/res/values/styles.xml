<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LargeEditTextStyle">
        <item name="android:background">@drawable/large_rounded_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="LargeButtonStyle">
        <item name="android:background">@drawable/large_rounded_bg</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:drawablePadding">-24dp</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="SimpleButtonStyle">
        <item name="android:background">@drawable/simple_rounded</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="LinkTextStyle">
        <item name="android:textColor">@color/default_gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="HeaderTextStyle">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SearchStyle">
        <item name="android:background">@drawable/search_background</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:color">@color/black</item>
        <item name="android:drawableEnd">@drawable/ic_search</item>
        <item name="android:drawableTint">@color/default_gray</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:inputType">text</item>
    </style>
    <style name="CourseBackgroundImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:tintMode">src_atop</item>
        <item name="android:tint">#6F000000</item>
    </style>
</resources>